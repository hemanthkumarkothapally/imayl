                        <Button
                            icon="sap-icon://refresh"
                            type="Critical"
                        />
                        <Button
                            icon="sap-icon://filter"
                            text="Filter"
                            type="Emphasized"
                            press="onFilterselection"
                        />
                        <Button
                            icon="sap-icon://add"
                            type="Emphasized"
                            press="onAddReceiveAPackage"
                        />
                        <Button
                            icon="sap-icon://action-settings"
                            type="Accept"
                        />
                    </Toolbar>
                </customHeader>
                <Panel>
                    <Bar>
                        <contentLeft>
                            <Title
                                text="Total Packages: 0 in Last {
                                parts: [
                                         {path: 'requestpackageModel>/popoverfromdate'},
                                          {path: 'requestpackageModel>/popovertoDate'}
                                        ],
                                        formatter: '.calculateDays'
                                } Days"
                            />
                        </contentLeft>
                        <contentRight>
                            <Title
                                text="{
                                parts: [
                                         {path: 'requestpackageModel>/popoverfromdate'},
                                          {path: 'requestpackageModel>/popovertoDate'}
                                        ],
                                        formatter: '.formatDateRange'
                                }"
                            />
                            <!-- <Title text="{requestpackageModel>/popoverfromdate} - {requestpackageModel>/popovertoDate}" /> -->
                        </contentRight>
                    </Bar>
                    <HBox
                        alignContent="SpaceBetween"
                        alignItems="Stretch"
                        width="100%"
                        justifyContent="Center"
                    >
                        <GenericTile
                            header="All Other Packages"
                            frameType="TwoByHalf"
                            press="press"
                        >
                            <TileContent
                                unit="Unit"
                                footer="Footer Text"
                            >
                                <NumericContent
                                    value="12"
                                    withMargin="false"
                                    valueColor="Good"
                                />
                            </TileContent>
                        </GenericTile>
                        <GenericTile
                            header="Missing Data Packages"
                            frameType="TwoByHalf"
                            press="press"
                        >
