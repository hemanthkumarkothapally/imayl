<mvc:View
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:vk="sap.ui.vk"
    xmlns:f="sap.f"
    xmlns:tnt="sap.tnt"
    controllerName="com.db.imayl.imayl.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <tnt:ToolPage id="mainpage">
        <tnt:header>
            <tnt:ToolHeader>
                <Image
                    id="logoId"
                    src="https://cloud.imayl.com/Com/ProcessWeaver/IMAYL/Common/dist/img/logo.png"
                />

                <Button
                    id="sideNavigationToggleButton"
                    icon="sap-icon://menu2"
                    type="Transparent"
                    press=".onMenuButtonPress"
                />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation
                expanded="true"
                selectedKey="2"
                width="2rem"
            >
                <tnt:NavigationList>
                    <tnt:NavigationListItem
                        text="All Packages"
                        icon="sap-icon://circle-task"
                        press=".onQuickActionPress"
                        expanded="true"
                        key="1"
                    />

                    <tnt:NavigationListItem
                        text="Receive a Package"
                        icon="sap-icon://database"
                        press=".onQuickActionPress"
                        expanded="true"
                        key="2"
                    />
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
