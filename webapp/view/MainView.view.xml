            <Page
                id="ReceiveaPackage_main"
                visible="true"
                showHeader="false"
            >
                <tnt:ToolHeader>
                    <Title
                        text="Receive a Package"
                        level="H1"
                    />
                    <ToolbarSpacer />

                    <Button
                        icon="sap-icon://refresh"
                        type="Critical"
                    />
                    <Button
                        icon="sap-icon://filter"
                        text="Filter"
                        type="Emphasized"
                    />
                    <Button
                        icon="sap-icon://add"
                        type="Emphasized"
                        press="onAddReceiveAPackage"
                    />
                    <Button
                        icon="sap-icon://action-settings"
                        type="Accept"
                    />
                </tnt:ToolHeader>
                <Bar>
                    <contentLeft>
                        <Title text="Total Packages: 0 in Last 7 Days" />
                    </contentLeft>
                    <contentRight>
                        <Title text="04/16/2025 - 04/22/2025" />
                    </contentRight>
                </Bar>
                <HBox
                    alignContent="SpaceBetween"
                    alignItems="Stretch"
                    width="100%"
                    justifyContent="Center"
                >
                    <GenericTile
                        header="All Other Packages"
                        frameType="TwoByHalf"
                        press="press"
                    >
                        <TileContent
                            unit="Unit"
                            footer="Footer Text"
                        >
                            <NumericContent
                                value="12"
                                withMargin="false"
                                valueColor="Good"
                            />
                        </TileContent>
                    </GenericTile>
                    <GenericTile
                        header="Missing Data Packages"
                        frameType="TwoByHalf"
                        press="press"
                    >
                        <TileContent
                            unit="Unit"
                            footer="Footer Text"
                        >
                            <NumericContent
                                value="12"
                                withMargin="false"
                                valueColor="Critical"
                            />
                        </TileContent>
                    </GenericTile>
                </HBox>
                <ToolbarSpacer />
                <Table>
                    <columns>
                        <Column>
                            <Label text="Color Code" />
                        </Column>
                        <Column>
                            <Label text="Status" />
                        </Column>
                        <Column>
                            <Label text="Action" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <Text />
                            <ComboBox selectedKey="all">
                                <items >
                                    <core:Item
                                        key="all"
                                        text="All"
                                    />
                                    <core:Item
                                        key="received"
                                        text="Received"
                                    />
                                </items>
                            </ComboBox>
                            <Text />
                        </ColumnListItem>
                        <ColumnListItem>
                            <core:Icon
                                src="sap-icon://color-fill"
                                color="green"
                            />
                            <Text text="Received" />
                            <cells>
                                <HBox>
                                    <Button
                                        text="Edit"
                                        type="Transparent"
                                    />
                                    <Button
                                        text="Print Lable"
                                        type="Transparent"
                                    />
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Page>
            <Page
                id="ReceiveaPackage_form"
                showHeader="false"
                visible="false"
            >
                <tnt:ToolHeader>
                    <Title text="Receive a Package" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="oncancel"
                    />
                </tnt:ToolHeader>
                <!-- <Bar >
            <contentLeft><Title text="Receive a Package"></Title></contentLeft>
            <contentRight>
            <Button icon="sap-icon://decline"></Button>
            </contentRight>
            </Bar> -->
                <content>
                    <VBox width="100%">
                        <HBox justifyContent="Center">
                            <VBox>
                                <Label text="Date" />
                                <DatePicker value="04/22/2025" />
                            </VBox>
                            <VBox>
                                <Label text="Carrier Tracking #" />
                                <Input />
                            </VBox>
                            <VBox>
                                <Label text="Tracking Number" />
                                <Input />
                            </VBox>
                            <VBox>
                                <Label text="Carrier" />
                                <ComboBox>
                                    <core:Item
                                        key="1"
                                        text="Los Vegas Parcel"
                                    />
                                </ComboBox>
                            </VBox>
                            <VBox>
                                <Label text="Total Pieces" />
                                <Input
                                    value="1"
                                    type="Number"
                                />
                            </VBox>
                        </HBox>
                        <layout:Grid defaultSpan="L6 M6 S12">
                            <Panel headerText="Ship From">
                                <form:SimpleForm
                                    layout="ResponsiveGridLayout"
                                    width="100%"
                                    emptySpanL="0"
                                    labelSpanL="4"
                                    columnsL="2"
                                    adjustLabelSpan="false"
                                    editable="true"
                                >
                                    <form:content>
                                        <Label text="First Name" />
                                        <Input placeholder="First Name" />
                                        <Label text="Last Name" />
                                        <Input placeholder="Last Name" />
                                        <Label text="Company Name" />
                                        <Input placeholder="Company Name" />
                                        <Label text="Email ID" />
                                        <Input placeholder="Email ID" />
                                        <Label text="MailStop/Building" />
                                        <Input
                                            placeholder="MailStop/Building"
                                        />
                                        <Label text="Address 1" />
                                        <Input placeholder="Address 1" />
                                        <Label text="Address 2" />
                                        <Input placeholder="Address 2" />
                                        <Label text="City" />
                                        <Input placeholder="City" />
                                        <Label text="State" />
                                        <Input placeholder="State" />
                                        <Label text="Zipcode" />
                                        <Input placeholder="Zipcode" />
                                        <Label text="Country" />
                                        <Select>
                                            <core:Item
                                                key="IN"
                                                text="India"
                                            />
                                            <core:Item
                                                key="US"
                                                text="USA"
                                            />
                                        </Select>
                                        <Label text="Phone" />
                                        <Input placeholder="Phone" />
                                    </form:content>
                                </form:SimpleForm>
                            </Panel>
                            <Panel headerText="Ship To">
                                <form:SimpleForm
                                    layout="ResponsiveGridLayout"
                                    editable="true"
                                    width="100%"
                                >
                                    <Label text="First Name" />
                                    <Input placeholder="First Name" />
                                    <Label text="Last Name" />
                                    <Input placeholder="Last Name" />
                                    <Label text="Company Name" />
                                    <Input placeholder="Company Name" />
                                    <Label text="Email ID" />
                                    <Input placeholder="Email ID" />
                                    <Label text="MailStop/Building" />
                                    <Input placeholder="MailStop/Building" />
                                    <Label text="Address 1" />
                                    <Input placeholder="Address 1" />
                                    <Label text="Address 2" />
                                    <Input placeholder="Address 2" />
                                    <Label text="City" />
                                    <Input placeholder="City" />
                                    <Label text="State" />
                                    <Input placeholder="State" />
                                    <Label text="Zipcode" />
                                    <Input placeholder="Zipcode" />
                                    <Label text="Country" />
                                    <Select>
                                        <core:Item
                                            key="IN"
                                            text="India"
                                        />
                                        <core:Item
                                            key="US"
                                            text="USA"
                                        />
                                        <!-- Add more -->
                                    </Select>
                                    <Label text="Phone" />
                                    <Input placeholder="Phone" />
                                </form:SimpleForm>
                            </Panel>
                        </layout:Grid>
                        <Table>
                            <columns>
                                <Column>
                                    <Label text="image" />
                                </Column>
                            </columns>
                        </Table>
                    </VBox>
                </content>
            </Page>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
