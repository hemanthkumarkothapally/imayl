<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="CreateUserDialog"
        title="Create a User"
        contentWidth="80%"
        contentHeight="auto"
        class="CreateUserDialog"
    >
        <customHeader>
            <Bar>
                <contentLeft>
                    <Title text="Create A User" />
                </contentLeft>
                <contentRight>
                    <Button
                        icon="sap-icon://decline"
                        type="Transparent"
                        press=".onClosePress"
                    />
                </contentRight>
            </Bar>
        </customHeader>

        <content >
            <l:Grid
                defaultSpan="M6 S12"
                vSpacing="0"
            >
                <VBox backgroundDesign="Transparent">
                    <Label
                        text="First Name "
                        class="sapUiSmallMarginTop"
                        required="true"
                    />
                    <Input value="{model>/firstName}" />
                </VBox>
                <VBox >
                    <Label
                        text="Last Name "
                        required="true"
                        class="sapUiSmallMarginTop"
                    />
                    <Input value="{model>/lastName}" />
                </VBox>
                <!-- Second Row -->
                <VBox >
                    <Label
                        text="Gender"
                        required="true"
                        class="sapUiSmallMarginTop"
                    />
                    <Input value="{model>/mailStop}" />
                </VBox>
                <VBox >
                    <Label
                        text="Department"
                        required="true"
                        class="sapUiSmallMarginTop"
                    />
                    <Input value="{model>/buildingNo}" />
                </VBox>
                <VBox >
                    <Label
                        text="Role"
                        required="true"
                        class="sapUiSmallMarginTop"
                    />
                    <Input value="{model>/firstName}" />
                </VBox>
                <VBox >
                    <Label
                        text="EMail ID"
                        required="true"
                        class="sapUiSmallMarginTop"
                    />
                    <Input
                        value="{model>/firstName}"
                        type="Email"
                    />
                </VBox>
                <VBox >
                    <Label
                        text="Phone"
                        required="true"
                        class="sapUiSmallMarginTop"
                    />
                    <Input
                        value="{model>/firstName}"
                        type="Number"
                    />
                </VBox>
                <VBox >
                    <Label
                        text="User ID"
                        required="true"
                        class="sapUiSmallMarginTop"
                    />
                    <Input value="{model>/firstName}" />
                </VBox>
                <Table class="Aliastableclass" items="{requestpackageModel>/aliasList}">
                <columns>
                    <Column><Text text="Alias Name" textAlign="Center" /></Column>
                    <Column><Text text="Action" textAlign="Center" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Input value="{requestpackageModel>aliasName}"></Input>
                            <HBox alignItems="Center" justifyContent="SpaceAround">
                    <Button icon="sap-icon://add" tooltip="Add Row" press="onAddAliasRow"/>
                    <Button icon="sap-icon://delete" tooltip="Delete Row" press="onDeleteAliasRow"/>
                </HBox>
                                                    </cells>
                    </ColumnListItem>
                </items>
                </Table>
                <VBox >
                    <Label
                        text="Address"
                        class="sapUiSmallMarginTop"
                    />
                    <TextArea
                        growing="true"
                        growingMaxLines="5"
                        width="16rem"
                        
                    />
                </VBox>
                <VBox >
                    <Label
                        text="City"
                        class="sapUiSmallMarginTop"
                    />
                    <Input value="{model>/firstName}" />
                </VBox>
                <VBox >
                    <Label
                        text="State"
                        class="sapUiSmallMarginTop"
                    />
                    <Input value="{model>/firstName}" />
                </VBox>
                <VBox >
                    <Label
                        text="Zipcode"
                        class="sapUiSmallMarginTop"
                    />
                    <Input value="{model>/firstName}" />
                </VBox>
                <VBox >
                    <Label
                        text="Country "
                        required="true"
                        class="sapUiSmallMarginTop"
                    />
                    <Select width="16rem" >
                        <core:Item
                            key="India"
                            text="India"
                        />
                        <core:Item
                            key="USA"
                            text="USA"
                        />
                    </Select>
                </VBox>
                <HBox alignItems="Center" justifyContent="SpaceBetween">
                <VBox width="10rem">
                    <Label
                        text="Status"
                        class="sapUiSmallMarginTop"
                    />
                    <Select width="10rem">
                        <core:Item
                            key="Active"
                            text="Active"
                        />
                        <core:Item
                            key="InActive"
                            text="InActive"
                        />
                    </Select>
                </VBox>
                
                <VBox width="10rem">
                    <Label
                        text="Language"
                        class="sapUiSmallMarginTop"
                    />
                    <Select width="10rem">
                        <core:Item
                            key="English"
                            text="English"
                        />
                        <core:Item
                            key="Telugu"
                            text="Telugu"
                        />
                    </Select>
                </VBox>
                <CheckBox text="Priority" />
                </HBox>
                
            </l:Grid>
            <VBox class="sapUiSmallMarginTop">
                <HBox
                    justifyContent="SpaceBetween"
                    class="sapUiSmallMarginBottom"
                >
                    <CheckBox
                        text="Notify Me"
                        selected="{model>/notifyMe}"
                    />
                    <CheckBox
                        text="Received"
                        selected="{model>/received}"
                    />
                    <CheckBox
                        text="Exception"
                        selected="{model>/exception}"
                    />
                    <CheckBox
                        text="Delivered"
                        selected="{model>/delivered}"
                    />
                    <CheckBox
                        text="All Statuses"
                        selected="{model>/allStatuses}"
                    />
                </HBox>
                <HBox>
                    <CheckBox
                        text="Notify Others"
                        selected="{model>/notifyOthers}"
                    />
                    <Input
                        value="{model>/notifyOthersEmail}"
                        width="100%"
                        class="sapUiSmallMarginBegin"
                    />
                    <CheckBox
                        text="SMS"
                        selected="{model>/sms}"
                        class="sapUiSmallMarginBegin"
                    />
                </HBox>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Cancel"
                press=".onCancel"
            />
        </beginButton>

        <endButton>
            <Button
                text="Save"
                type="Emphasized"
                icon="sap-icon://save"
                press=".onSave"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
