<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form">
    
    <Popover
        id="columnSettingsPopover"
        title="Column Selection"
        placement="Bottom"
        showHeader="true"
        contentWidth="200px">

        <VBox class="sapUiSmallMargin">
            <SearchField placeholder="Search" liveChange="onSearchColumn" />
            <CheckBox text="Select All" selected="{viewModel>/selectAll}" select="onSelectAllColumns" />
            <VBox id="columnListVBox" />
        </VBox>

        <footer>
            <Bar>
                <contentRight>
                    <Button text="Cancel" press="onCancelColumnPopover" />
                    <Button text="Apply" type="Emphasized" press="onApplyColumnChanges" />
                </contentRight>
            </Bar>
        </footer>
    </Popover>
</core:FragmentDefinition>
